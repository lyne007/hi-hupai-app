.site  {
  padding-bottom: 130rpx;
}
.site .header {
  height: auto;
  margin-bottom: 30rpx;
  background: var(--qui-BG-2);
  border-bottom: 2rpx solid var(--qui-BOR-ED);
}
.site .header .circleDet {
  padding: 60rpx 30rpx;
  opacity: 1;
}
.site .header .circleDet-txt {
  color: var(--qui-FC-34);
  opacity: 0.49;
}
.site .header .logo {
  height: 75rpx;
  padding-top: 71rpx;
}
.site .header .circleDet-num,
.site .header .circleDet-share {
  color: var(--qui-FC-333);
}
.site .themeCount .themeItem__footer {
  display: none;
}
.site .themeCount .addAsk {
  top: 0;
}
.site .themeCount .themeItem {
  padding-left: 0;
  margin: 0;
  border-top: none;
}
.site .site-theme__last .themeItem {
  border-bottom: none;
}
.site .site-submit .qui-button--button {
  position: absolute;
  top: 20rpx;
  right: 24rpx;
}
.site-invite {
  padding: 30rpx 60rpx;
  text-align: center;
}
.site-invite__detail__bold {
  margin: 0 5rpx;
  font-weight: bold;
}
.site-invite__detail {
  font-size: 30rpx;
}
.site-submit {
  position: fixed;
  bottom: 0;
  z-index: 100;
  width: 100%;
  height: 130rpx;
  padding: 20rpx 24rpx;
  background: var(--qui-BG-2);
  box-shadow: 0rpx -3rpx 6rpx rgba(0, 0, 0, 0.05);
  box-sizing: border-box;
}
.site-submit__price {
  margin-top: 10rpx;
  font-size: 36rpx;
  color: var(--qui-FC-AAA);
  text-decoration: line-through;
}
.site-submit__price__pay {
  margin-top: 10rpx;
  font-size: 36rpx;
  color: var(--qui-RED);
}
.site-submit__expire {
  font-size: 26rpx;
  color: var(--qui-FC-333);
}

