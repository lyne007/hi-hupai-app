.site .header {
  height: auto;
  margin-bottom: 30rpx;
  background: var(--qui-BG-2);
  border-bottom: 2rpx solid var(--qui-BOR-ED);
}
.site .header .circleDet {
  padding: 60rpx 40rpx 50rpx;
  opacity: 1;
}
.site .header .circleDet-txt {
  color: var(--qui-FC-333);
  opacity: 1;
}
.site .header .logo {
  height: 75rpx;
  padding-top: 71rpx;
}
.site .header .qui-back {
  background: var(--qui-BG-2);
}
.site .cell-item__body__content-title {
  width: 150rpx;
  margin-right: 40rpx;
  color: var(--qui-FC-777);
}
.site .header .circleDet-num,
.site .header .circleDet-share {
  color: var(--qui-FC-333);
}
.site .site-invite {
  padding-bottom: 20rpx;
  text-align: center;
}
.site .cell-item--auto .cell-item__body {
  height: auto;
  padding: 35rpx 0;
  -webkit-box-align: start;
  -webkit-align-items: flex-start;
          align-items: flex-start;
}
.site .cell-item--left .cell-item__body__right {
  text-align: left;
}
.site-item {
  padding-left: 40rpx;
  background: var(--qui-BG-2);
  border-bottom: 2rpx solid var(--qui-BOR-ED);
}
.site .cell-item {
  padding-right: 40rpx;
}
.site-item__person__content-avatar,
.site-item__owner-avatar {
  margin-left: 8rpx;
}
.site-item__owner {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
}
.site-item__owner-avatar {
  margin-right: 20rpx;
}
 .member .cell-item__body__right {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
}
.site-item__person__content {
  display: inline-block;
  height: 60rpx;
  overflow: hidden;
  font-size: 0;
}
.site-item__permission {
  display: inline-block;
  height: 60rpx;
  padding: 0 28rpx;
  margin-right: 10rpx;
  margin-bottom: 10rpx;
  font-size: 28rpx;
  line-height: 60rpx;
  border: 2rpx solid var(--qui-BOR-ED);
  border-radius: 7rpx;
}

