.following {
  font-size: 30rpx;
}
.following .cell-item__body {
  padding-right: 20rpx;
}
.following .cell-item__body__right {
  font-size: 30rpx;
  color: var(--qui-FC-333);
}
.following .qui-icon {
  margin-right: 0;
  margin-left: 14rpx;
}
.follow-content {
  padding: 20rpx 0;
  margin-bottom: 30rpx;
  background: var(--qui-BG-2);
  border-bottom: solid 2rpx var(--qui-BG-777);
}
.follow-content__items {
  position: relative;
  padding-left: 110rpx;
}
.follow-content__items__avatar {
  position: absolute;
  top: 16rpx;
  left: 20rpx;
}
.follow-content__items__operate {
  padding-right: 20rpx;
}
