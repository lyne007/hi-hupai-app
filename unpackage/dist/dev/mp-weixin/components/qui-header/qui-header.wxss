.header {
  position: relative;
  width: 100%;
  height: 400rpx;
  background-size: cover;
}
.header .logo {
  display: block;
  max-height: 88rpx;
  padding-top: 159rpx;
  margin: 0 auto;
}
.header .qui-back {
  background: transparent;
}
.header .circleDet {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
          justify-content: space-between;
  padding: 69rpx 30rpx 47rpx;
  line-height: 37rpx;
  text-align: center;
}
.header .circleDet text {
  line-height: 37rpx;
  text-align: center;
}
.header .circleDet-txt {
  font-size: 28rpx;
  color: var(--qui-FC-FFF);
  opacity: 0.5;
}
.header .circleDet-num {
  padding-left: 15rpx;
  font-size: 30rpx;
  color: var(--qui-FC-FFF);
}
.header .circleDet-share {
  font-size: 28rpx;
  color: var(--qui-FC-FFF);
}
.header .qui-icon {
  padding-right: 18rpx;
}
.header .bar-sticky {
  position: -webkit-sticky;
  position: sticky;
  top: 0;
  z-index: 101;
}
.header .mask {
  position: fixed;
  top: 0;
  left: 0;
  z-index: 17;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.6);
}
.header .wxShareTip {
  position: fixed;
  top: 0;
  left: 0;
  z-index: 2222222222222;
  width: 100%;
  height: 100%;
  text-align: right;
}
.header .wxShareTip .sharePoint {
  display: inline-block;
  width: 70%;
  margin-top: 10rpx;
  margin-right: 30rpx;
}
.header .wxShareTip .shareKnow {
  display: block;
  width: 35%;
  margin: 20vh auto 30rpx;
}
.header-h5 {
  height: 256rpx;
  background-size: cover;
}
.header-h5 .logo {
  max-height: 74rpx;
  padding-top: 58rpx;
}
.header-h5 .circleDet {
  padding: 49rpx 20rpx 47rpx;
}

