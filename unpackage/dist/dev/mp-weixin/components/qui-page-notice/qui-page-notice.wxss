.scroll-Y {
  position: fixed;
  right: 0rpx;
  bottom: 119rpx;
  left: 0rpx;
}
.notice-box {
  width: 100%;
  min-height: 100vh;
  font-size: 30rpx;
}
.notice-box .left-text {
  min-width: 250rpx;
  font-weight: bold;
  color: var(--qui-FC-34);
}
.notice-box__list {
  padding-left: 40rpx;
  background: var(--qui-BG-2);
  border-bottom: 2rpx solid var(--qui-BOR-ED);
  -webkit-transition: 0.4s;
  transition: 0.4s;
}
.notice-box__list-red-circle {
  position: relative;
}
.notice-box__list-red-circle:after {
  position: absolute;
  top: 4px;
  right: -5px;
  width: 7px;
  height: 7px;
  background: var(--qui-RED);
  border-radius: 50%;
  content: '';
}
.notice-box__list text {
  vertical-align: middle;
}
.dialog-box {
  margin: 20rpx 0;
  background: var(--qui-BG-2);
  border-bottom: 2rpx solid var(--qui-BOR-ED);
}
.dialog-box__header {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
          justify-content: space-between;
}
.dialog-box__header__info {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
          justify-content: space-between;
}
.dialog-box__header__info__user-avatar {
  margin: 20rpx 20rpx 20rpx 40rpx;
}
.dialog-box__header__info__box {
  width: 100%;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  margin: 20rpx 0rpx 10rpx;
}
.dialog-box__header__info__username {
  margin-right: 6rpx;
  font-weight: bold;
  line-height: 37rpx;
  color: var(--qui-FC-000);
}
.dialog-box__header__info__groupname {
  font-weight: 400;
  line-height: 37rpx;
  color: var(--qui-FC-AAA);
}
.dialog-box__header__info__time {
  font-size: 24rpx;
  line-height: 31rpx;
  color: var(--qui-FC-AAA);
}
.dialog-box__header__r {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-orient: horizontal;
  -webkit-box-direction: normal;
  -webkit-flex-direction: row;
          flex-direction: row;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  margin: 0rpx 40rpx 0rpx 0rpx;
}
.dialog-box__header__r-red-circle {
  position: relative;
}
.dialog-box__header__r-red-circle:after {
  position: absolute;
  top: -4px;
  right: 5px;
  width: 7px;
  height: 7px;
  background: var(--qui-RED);
  border-radius: 50%;
  content: '';
}
.dialog-box__header__r .delete {
  margin-right: 35rpx;
}
.dialog-box__con {
  padding: 0rpx 40rpx 30rpx;
  font-weight: 400;
  color: var(--qui-FC-333);
  opacity: 1;
}

