.ft {
  position: fixed;
  bottom: 0;
  z-index: 100;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  width: 100%;
  background-color: var(--qui-BG-2);
  box-shadow: 0 -3px 6px rgba(0, 0, 0, 0.05);
}
.ft-box {
  position: relative;
  width: 20%;
  height: 100rpx;
  padding-top: 15rpx;
  font-size: 28rpx;
  text-align: center;
  box-sizing: border-box;
}
.ft-box3 {
  margin-left: 150rpx;
}
.ft-box-content {
  color: var(--qui-FC-777);
}
.ft-box-spacal {
  position: absolute;
  top: -5rpx;
  left: 50%;
  width: 105rpx;
  height: 105rpx;
  margin-left: -52rpx;
  border-radius: 50%;
  box-shadow: 0 -3px 6px rgba(0, 0, 0, 0.05);
}
.ft-box-spacal-icon {
  position: relative;
  width: 89rpx;
  height: 89rpx;
  margin: 8rpx 0 0 8rpx;
}
.ft-box.active,
.ft-box.active .ft-box-content {
  font-weight: bold;
  color: var(--qui-TAB);
}
.message {
  position: relative;
}
.message:after {
  position: absolute;
  top: -9rpx;
  right: -6rpx;
  width: 10rpx;
  height: 10rpx;
  background: var(--qui-RED);
  border-radius: 50%;
  content: '';
}
.popup-share-content-inner {
  height: auto;
  overflow: hidden;
  -webkit-box-pack: start;
  -webkit-justify-content: flex-start;
          justify-content: flex-start;
}
.popup-share-content-inner .popup-share-content-box {
  margin-bottom: 40rpx;
  -webkit-box-flex: 0;
  -webkit-flex: 0 0 25%;
          flex: 0 0 25%;
}

